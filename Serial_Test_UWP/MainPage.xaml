<Page
    x:Class="Serial_Test_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Serial_Test_UWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBlock x:Name="text_block" Margin="0 0 200 0"/>
        <Button x:Name="btn_send" Content="Send Message" HorizontalAlignment="Right" Margin="0 0 0 0" Click="btn_send_Click"/>
    </Grid>
</Page>
